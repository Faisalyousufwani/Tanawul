<% layout("/layouts/boilerplate.ejs") -%>
<div class="register">
    <div class="signIn ">
        <p class="my-center my-Heading">Sign in</p>
        <form action="/register" method="post" >
            <input type="email" placeholder="Email" name="email">
            <input type="password" placeholder="password" name="password">
            <span class="forget-password">Forget your password</span>
            <button class="btn btn-form">SIGN IN</button>
        </form>
    </div>
    <div class="signUp">
        <p>Enter your details to start the journey with us</p>
        <button class="btn btn-sm">SIGN UP</button>
    </div>
</div>